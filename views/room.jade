doctype html
html
    head
        title=room.name
        meta(charset="utf-8")
        link(href="/css/main.css", rel="stylesheet")
    body
        h1= room.name
        ul#members
            each member in members
                li=member.name
        ul#messages
            each message in recentMessages
                li= message.msg
        form(action="/")
            input(type="hidden",data-room=room._id, id="room_id" name="room_id")
            input#m(autocomplete="off")
            button Send
        script(src="/js/jquery.min.js", async)
        script(src="/js/socket.io.js", async)
        script(src="/js/app.js", async)